generator client {
  provider = "prisma-client-js"
  output   = "./node_modules/@prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid()) @db.Uuid
  email     String   @unique
  firstName String
  lastName  String
  createdAt DateTime @default(now())

  @@map("users") // Ensure table name matches Supabase
}

model Offer {
  id        String    @id @default(uuid()) @db.Uuid
  title     String
  type      OfferType
  imageUrl  String?
  createdAt DateTime  @default(now())

  @@map("offers") // Ensure table name matches Supabase
}

enum OfferType {
  hotel
  flight
  multi
}
